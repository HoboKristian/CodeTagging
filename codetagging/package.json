{
    "name": "codetagging",
    "displayName": "CodeTagging",
    "description": "",
    "version": "0.0.1",
    "publisher": "507project",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.tag1",
        "onCommand:extension.tag2",
        "onCommand:extension.tag3",
        "onCommand:extension.tagSelectedCode",
        "onCommand:extension.foldRegion",
        "onCommand:extension.unfoldRegion"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.tagSelectedCode",
                "title": "Tag selection"
            },
            {
                "command": "extension.foldRegion",
                "title": "Fold region"
            },
            {
                "command": "extension.unfoldRegion",
                "title": "Unfold region"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.tagSelectedCode",
                    "when": "editorTextFocus"
                }
            ]
        },
        "views": {
            "explorer": [
                {
                    "id": "tagList",
                    "name": "Tag List"
                }
            ]
        },
        "keybindings": [
            {
                "key": "ctrl+shift+z 1",
                "mac": "cmd+shift+z 1",
                "command": "extension.tag1",
                "when": "editorTextFocus"
            },
            {
                "key": "ctrl+shift+z 2",
                "mac": "cmd+shift+z 2",
                "command": "extension.tag2",
                "when": "editorTextFocus"
            },
            {
                "key": "ctrl+shift+z 3",
                "mac": "cmd+shift+z 3",
                "command": "extension.tag3",
                "when": "editorTextFocus"
            },
            {
                "key": "ctrl+shift+t",
                "mac": "cmd+shift+t",
                "command": "extension.tagSelectedCode",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
